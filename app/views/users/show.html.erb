<div class="profile">

  <h1 class="crud-title">マイページ</h1>

  <div class="profile-image">
    <%= image_tag @user.image.url, size: '400x300' if @user.image && @user.image.url %>
  </div>

  <div class="profile-user-settings">
    <h2 class="profile-user-name"><%= @user.username %></h2>
  </div>

  <div class="profile-stats">
    <ul>
      <li><%= link_to '個人記録・チーム記録へ', teams_path, class: 'btn record-link-btn' %></li>
      <li>
        <% if current_user == User.find(params[:id]) %>
          <%= link_to 'ユーザ情報編集', edit_user_path, class: 'btn profile-edit-btn' %>
        <% end %>
      </li>
      <li>
        <% if current_user.admin? %>
          <%= link_to '管理者画面', rails_admin_path, class: 'btn' %>
        <% end %>
      </li>
    </ul>
  </div>

  <div class="profile-bio">
    <p><span class="profile-real-name"><%= @user.introduction %></p>
  </div>

</div>
