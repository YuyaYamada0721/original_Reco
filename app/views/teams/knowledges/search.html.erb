<h1 class="app-function-title">
  <span>
    <% if @team.is_solo? %>
      Solo Knowledge
    <% else %>
      Team Knowledge
    <% end %>
  </span>
  <%= @team.name %> -ナレッジ一覧-
</h1>

<div class="knowledge-index-function-box">
  <div>
    <%= link_to 'ナレッジ登録',  new_team_knowledge_path(@team), class: 'custom-btn new-link' %>
  </div>

  <div class="knowledge-search-box">
      <%= search_form_for @q, url: search_team_knowledges_path do |f| %>
        <%= f.label :name_cont, 'ナレッジ名', placeholder: 'ナレッジ名で検索できます。' %>
        <%= f.search_field :name_cont %>
        <%= f.submit '検索', class: 'btn btn-secondary' %>
      <% end %>
  </div>
</div>

<div class="knowledge-index-box">
  <div class="row">
    <% @results.each do |knowledge| %>
      <div class="col-md-4">
        <div class="card stacked--fan-right">
          <div class="card-header"><%= link_to knowledge.name, team_knowledge_path(@team, knowledge) %></div>
            <a href="/teams/<%= @team.id %>/knowledges/<%= knowledge.id %>">
              <p class="card-content">作成者：<%= knowledge.member.user.username %></p>
              <p class="card-content">更新日：<%= l knowledge.updated_at %></p>
            </a>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%= paginate @results %>

<%= link_to '戻る', team_path(@team), class: 'btn-flat-logo' %>
