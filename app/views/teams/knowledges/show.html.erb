<h1>Knowledge詳細</h1>
<hr>

<h2><%= @knowledge.name %></h2>
<br>

  <% if @stock.present? %>
    <%= link_to 'ストック解除', team_knowledge_stock_path(@knowledge.team_id, @knowledge, params[:id]), method: :delete %>
  <% else %>
    <%= link_to 'ストック登録', team_knowledge_stocks_path(@knowledge.team_id, @knowledge), method: :post %>
  <% end %>

<br>

<div><%= link_to '編集', edit_team_knowledge_path(@team, @knowledge) %></div>
<div><%= link_to '削除', team_knowledge_path(@team, @knowledge), method: :delete, data: { confirm: '削除しても良いですか？' } %></div>
<hr>
<div><%= link_to 'Tipsへ', team_knowledge_tips_path(@team.id, @knowledge.id) %></div>
<br>

<%= link_to '戻る', team_knowledges_path %>
