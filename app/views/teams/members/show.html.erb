<h1><%= @member.team.name %>：<%= @member.user.username %>さんのページ</h1>
<hr>

<% if @member.id == @current_member.id %>

<% else %>
  <% if @is_group == true %>
    <%= link_to 'チャットへ', team_group_path(params[:team_id], @group_id) %>
  <% else %>
    <%= form_for @group, url: team_groups_path(params[:team_id])  do |f| %>
      <%= fields_for @group_member do |e| %>
        <%= e.hidden_field :member_id, value: @member.id %>
      <% end %>
      <%= f.submit "チャットを始める" %>
    <% end %>
  <% end %>
<% end %>


<hr>
<%= link_to '戻る', team_path(params[:team_id]) %>
