<h1>DM</h1>

<h4>参加者</h4>
<% @group_members.each do |e| %>
  <h5><strong><%= e.member.user.username%>さん</a></strong></h5>
<% end %>

<hr>
<% if @messages.present? %>
  <% @messages.each do |m| %>
    <strong><%= m.body %></strong>
    <small>by <strong><%= m.member.user.username %>さん</a></strong></small>
    <hr>
  <% end %>
<% else %>
  <h3 class="text-center">メッセージはまだありません</h3>
<% end %>

<%= form_for @message, url: team_messages_path(params[:team_id]) do |f| %>
  <%= f.text_field :body, :placeholder => "メッセージを入力して下さい" , :size => 70 %>
  <%= f.hidden_field :group_id, :value => @group.id %>
  <br>
  <%= f.submit "投稿する" %>
<% end %>
