<h1>メッセージ</h1>

<h2>参加者</h2>
<% @group_members.each do |gm| %>
  <p>・<%= gm.member.user.username%></p>
<% end %>

<hr>
<% if @messages.present? %>
  <% @messages.each do |message| %>
    <p>内容：<%= message.body %>投稿者：<%= message.member.user.username %>確認者数：<%= message.reads.count %>人</p>
    <hr>
  <% end %>
<% else %>
  <p>メッセージはまだありません</p>
<% end %>

<%= form_for @message, url: team_messages_path(params[:team_id]) do |form| %>
  <%= form.text_field :body, placeholder: 'メッセージを入力して下さい', size: 40 %>
  <%= form.hidden_field :group_id, value: @group.id %>
  <br>
  <%= form.submit "投稿する" %>
<% end %>
